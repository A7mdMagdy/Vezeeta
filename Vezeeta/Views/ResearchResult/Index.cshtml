@model IEnumerable<Vezeeta.Models.AppUser>

<style>
    .user-rating {
        font-size: 24px;
    }

    .star {
        cursor: pointer;
    }

        .star:hover:before,
        .star:hover ~ .star:before,
        .star:hover ~ .star:hover:before {
            content: "\2605";
            position: absolute;
            color: gold;
        }

        .star:before {
            content: "\2606";
            position: absolute;
        }

        .star:checked ~ .star:before {
            content: "\2605";
            color: gold;
        }

    input[type="radio"].star {
        display: none;
    }

    .carousel-item {
        text-align: center; 
    }

    .list-group-item {
        width: 90%;
        margin: 0;
    }

    .card-hover:hover {
        background-color: #EDF0F2;
    }

    a:hover span {
        text-decoration: underline;
    }
    
</style>

<div class="row">
    <div class="col-md-3">
        <div class="accordion">
            <div class="accordion-item">
                <h5 class="accordion-header" style="background:#0070CD;text-align:center;font-weight:bold;color:white">
                    <i class="bi bi-funnel"></i> Filter
                </h5>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        SubSpecialist&#129658;
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <input type="radio" id="All" name="specialist" value="All">
                        <label for="All">All</label>
                        <br />
                        <input type="radio" id="dermatology" name="specialist" value="Dermatology">
                        <label for="dermatology">Dermatology</label>
                        <br/>

                        <input type="radio" id="dentistry" name="specialist" value="Dentistry">
                        <label for="dentistry">Dentistry</label>
                        <br />

                        <input type="radio" id="psychiatry" name="specialist" value="Psychiatry">
                        <label for="psychiatry">Psychiatry</label>
                        <br />
                        <input type="radio" id="pediatrics" name="specialist" value="Pediatrics and New Born">
                        <label for="pediatrics">Pediatrics and New Born</label>
                        <br />
                        <input type="radio" id="neurology" name="specialist" value="Neurology">
                        <label for="neurology">Neurology</label>
                        <br />
                        <input type="radio" id="orthopedics" name="specialist" value="Orthopedics">
                        <label for="orthopedics">Orthopedics</label>
                        <br />
                        <input type="radio" id="gynaecology" name="specialist" value="Gynaecology and Infertility">
                        <label for="gynaecology">Gynaecology and Infertility</label>
                        <br />
                        <input type="radio" id="ent" name="specialist" value="Ear, Nose and Throat">
                        <label for="ent">Ear, Nose and Throat</label>
                        <br />
                        <input type="radio" id="allergy" name="specialist" value="Allergy and Immunology">
                        <label for="allergy">Allergy and Immunology</label>
                        <br />
                        <input type="radio" id="audiology" name="specialist" value="Audiology">
                        <label for="audiology">Audiology</label>
                        <br />
                        <input type="radio" id="chestrespiratory" name="specialist" value="Chest and Respiratory">
                        <label for="chestrespiratory">Chest and Respiratory</label>
                        <br />
                        <input type="radio" id="diabetes" name="specialist" value="Diabetes and Endocrinology">
                        <label for="diabetes">Diabetes and Endocrinology</label>
                        <br />
                        <input type="radio" id="radiology" name="specialist" value="Diagnostic Radiology">
                        <label for="radiology">Diagnostic Radiology</label>
                        <br />
                        <input type="radio" id="dietnutrition" name="specialist" value="Dietitian and Nutrition">
                        <label for="dietnutrition">Dietitian and Nutrition</label>
                        <br />
                        <input type="radio" id="familymedicine" name="specialist" value="Family Medicine">
                        <label for="familymedicine">Family Medicine</label>
                        <br />
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h3 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" style="color:#0070CD;text-align:center;font-weight:bold">
                        Examination Fee&#128184;
                    </button>
                </h3>
                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <input type="radio" id="Lessthan50" name="Fees" value="Lessthan50">
                        <label for="Lessthan50">Lessthan50</label>
                        <br />
                        <input type="radio" id="From100to200" name="Fees" value="From100to200">
                        <label for="From100to200">From100to200</label>
                        <br />
                        <input type="radio" id="From200to300" name="Fees" value="From200to300">
                        <label for="From200to300">From200to300</label>
                        <br />
                        <input type="radio" id="Greaterthan500" name="Fees" value="Greaterthan500">
                        <label for="Greaterthan500">Overthan500</label>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h3 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree" style="color:#0070CD;text-align:center;font-weight:bold">
                        <i class="bi bi-gender-female"></i><i class="bi bi-gender-male"></i> Gender
                    </button>
                </h3>
                <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <input type="radio" id="female" name="gender" value="Female" />
                        <label for="female">Female</label>
                        <br />
                        <input type="radio" id="male" name="gender" value="Male"/>
                        <label for="male">Male</label>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-6">
                <h4 style="color:#747470;margin-bottom: 0px;">@Model.FirstOrDefault()?.typeOfSpecialization</h4>
            </div>
            <div class="col-md-6">
                <select class="form-select" aria-label="sorted" style="width:150px; color: #747470;" onchange="location = this.value;">
                    <option value="?sortOrder=Sorted" selected style="color: #747470;">Sorted</option>
                    <option value="?sortOrder=HighToLow" style="color: #747470;">High to Low</option>
                    <option value="?sortOrder=LowToHigh" style="color: #747470;">Low to High</option>
                </select>
            </div>
        </div>
        <br/>
        <div class="user-list col-12">
            @foreach (var user in Model)
            {

                <div class="card mb-4 card-hover" style="max-width: 94%; border-radius:5% ;">
                    
                    <div class="row g-0">
                        <div class="col-md-2">
                            <a href="@Url.Action("Details", "ResearchResult", new { id = user.Id })" style="text-decoration: none;">
                            <div class="user-image" style="margin-top: 20px;">
                                    @* <img src="~/images/@Url.Content(user.Image)" class="img-fluid rounded-circle border border-dark m-4" alt="User Image" style="border-width: 4px; border-style: solid;width: 110px; height: 110px;" /> *@
                                    <img src="~/assets/img/@Url.Content(user.Image)" class="img-fluid rounded-circle border border-dark m-4" alt="User Image" style="border-width: 4px; border-style: solid;width: 110px; height: 110px;" />
                            </div>
                            </a>
                        </div>

                        <div class="col-md-5">
                            <div class="card-body">
                                <a href="@Url.Action("Details", "ResearchResult", new { id = user.Id })" style="text-decoration: none;">
                                    <h5 class="card-title" style="color:#2985D3;margin-bottom: 0px;">
                                        <span style="font-weight:initial;font-size:17px">@user.Role</span>
                                        <span >@user.firstName @user.lastName</span>
                                    </h5>
                                </a>
                                <p class="card-text" style="color:#898B8E;margin-bottom: 0px;margin-top: 0px;font-size:15px;font-weight:inherit"> @user.Specialization</p>
                                <div class="user-rating" style="margin-top:1px">
                                    <!-- Star rating -->
                                    <input type="radio" id="star5_@user.Id" name="rating_@user.Id" value="5" class="star" />
                                    <label for="star5_@user.Id" class="star" data-value="5">&#9733;</label>
                                    <input type="radio" id="star4_@user.Id" name="rating_@user.Id" value="4" class="star" />
                                    <label for="star4_@user.Id" class="star" data-value="4">&#9733;</label>
                                    <input type="radio" id="star3_@user.Id" name="rating_@user.Id" value="3" class="star" />
                                    <label for="star3_@user.Id" class="star" data-value="3">&#9733;</label>
                                    <input type="radio" id="star2_@user.Id" name="rating_@user.Id" value="2" class="star" />
                                    <label for="star2_@user.Id" class="star" data-value="2">&#9733;</label>
                                    <input type="radio" id="star1_@user.Id" name="rating_@user.Id" value="1" class="star" />
                                    <label for="star1_@user.Id" class="star" data-value="1">&#9733;</label>
                                </div>
                                <p class="card-text" style="color:#2985D3;margin-bottom: 3px">&#129658;<span style="color:#898B8E;font-size:15px;font-weight:inherit">Specialized in </span><span style="font-weight:700">@user.typeOfSpecialization</span> </p>
                                <p class="card-text" style="color:#898B8E;margin-top: 2px;margin-bottom: 4px"><i class="bi bi-geo-alt"></i>@user.Address</p>
                                <p class="card-text" style="margin-top: 2px ;margin-bottom: 4px">&#128184;<span style="color:#898B8E;font-size:15px;font-weight:inherit">Fees:</span> <span style="color:#898B8E;font-size:15px;font-weight:inherit">@user.fees EGP</span></p>
                                <p class="card-text" style="margin-top: 2px;margin-bottom: 4px;color:#2985D3;"><i class="bi bi-hourglass-split"></i>Waiting Time : 37 Minutes</p>
                                <p class="card-text" style="margin-top: 2px;margin-bottom: 4px;color:#898B8E;"><i class="bi bi-telephone"></i>16676 - Cost of regular call</p>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                            </div>
                        </div>
                        <div id="carouselExample" class="carousel slide col-md-5 justify-content-end row" data-bs-interval="false">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <div class="row ">
